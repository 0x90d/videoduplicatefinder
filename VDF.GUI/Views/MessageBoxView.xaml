<Window
    x:Class="VDF.GUI.Views.MessageBoxView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvm="clr-namespace:VDF.GUI.Mvvm;assembly=VDF.GUI"
    xmlns:local="clr-namespace:VDF.GUI;assembly=VDF.GUI"
    Title="{Binding Title}"
    MinWidth="400"
    MaxWidth="600"
    MaxHeight="600"
    CanResize="false"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">
    <ScrollViewer x:Name="ScrollViewerMessageboxContent" VerticalScrollBarVisibility="Auto">
        <Grid x:Name="GridMessageboxContent" RowDefinitions="Auto, Auto">
            <TextBlock
                Grid.Row="0"
                Margin="10,20,10,20"
                HorizontalAlignment="Center"
                Text="{Binding Message}"
                TextWrapping="Wrap" />
            <Grid Grid.Row="1" Margin="5,0,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="1"
                    Width="100"
                    Margin="5"
                    Command="{Binding OKCommand}"
                    Content="{Binding Source={x:Static local:App.Lang}, Path=[Dialog.OK]}"
                    IsVisible="{Binding HasOKButton}" />
                <Button
                    Grid.Column="2"
                    Width="100"
                    Margin="5"
                    Command="{Binding YesCommand}"
                    Content="{Binding Source={x:Static local:App.Lang}, Path=[Dialog.Yes]}"
                    IsVisible="{Binding HasYesButton}" />
                <Button
                    Grid.Column="3"
                    Width="100"
                    Margin="5"
                    Command="{Binding NoCommand}"
                    Content="{Binding Source={x:Static local:App.Lang}, Path=[Dialog.No]}"
                    IsVisible="{Binding HasNoButton}" />
                <Button
                    Grid.Column="4"
                    Width="100"
                    Margin="5"
                    Command="{Binding CancelCommand}"
                    Content="{Binding Source={x:Static local:App.Lang}, Path=[Dialog.Cancel]}"
                    IsVisible="{Binding HasCancelButton}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>