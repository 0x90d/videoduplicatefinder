<Window
    x:Class="VDF.GUI.Views.MessageBoxView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mvvm="clr-namespace:VDF.GUI.Mvvm;assembly=VDF.GUI"
    Title="{Binding Title}"
    MinWidth="400"
    MaxWidth="600"
    CanResize="false"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner">
    <!-- Setting width on Grid is a workaround for a bug under Windows
         For more information see:
         https://github.com/AvaloniaUI/Avalonia/issues/4838#issuecomment-710759375
    -->
    <Grid Width="{Binding $parent[Window].Bounds.Width}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10,20,10,20"
            Text="{Binding Message}"
            HorizontalAlignment="Center"
            TextWrapping="Wrap" />
        <Grid Grid.Row="1" Margin="5,0,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Width="100"
                Margin="5"
                Command="{Binding OKCommand}"
                Content="OK"
                IsVisible="{Binding HasOKButton}" />
            <Button
                Grid.Column="2"
                Width="100"
                Margin="5"
                Command="{Binding YesCommand}"
                Content="Yes"
                IsVisible="{Binding HasYesButton}" />
            <Button
                Grid.Column="3"
                Width="100"
                Margin="5"
                Command="{Binding NoCommand}"
                Content="No"
                IsVisible="{Binding HasNoButton}" />
            <Button
                Grid.Column="4"
                Width="100"
                Margin="5"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                IsVisible="{Binding HasCancelButton}" />
        </Grid>
    </Grid>
</Window>