                <TabControl x:Name="TabControl">
                    <TabItem Name="TabItemScanner">
                        <TabItem.Header>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="Scanner" />
                        </TabItem.Header>
